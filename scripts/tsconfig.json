{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["esnext"],
      "downlevelIteration": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": false,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "experimentalDecorators": true,
      "outDir": "build/"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": ["node_modules"]
  }